@{
    ViewData["Title"] = "Application Form";
}
<h1>@ViewData["Title"]</h1>

<p>This will view the Application Form for applicants.</p>

<form class="application-form">
    <div class="form-column">
        <div>
            <label for="firstName">First Name:</label>
            <input type="text" id="firstName" name="firstName" />
        </div>
        <div>
            <label for="lastName">Last Name:</label>
            <input type="text" id="lastName" name="lastName" />
        </div>
        <div>
            <label for="email">Email:</label>
            <input type="email" id="email" name="email" />
        </div>
        <div>
            <label for="address">Address:</label>
            <input type="text" id="address" name="address" />
        </div>
        <div>
            <label for="phoneNumber">Phone Number:</label>
            <input type="tel" id="phoneNumber" name="phoneNumber" />
        </div>
    </div>
    <div class="form-column">
        <div>
            <label for="cv">Upload CV Here:</label>
            <input type="file" id="cv" name="cv" />
            <button type="button">Click to Upload</button>
        </div>
        <div>
            <label for="jobRole">Job Role:</label>
            <select id="jobRole" name="jobRole">
                <option value="IT Job 1">IT Job 1</option>
                <option value="IT Job 2">IT Job 2</option>
                <option value="IT Job 3">IT Job 3</option>
                <option value="IT Job 4">IT Job 4</option>
                <option value="IT Job 5">IT Job 5</option>
            </select>
        </div>
        <button type="submit">Apply Now</button>
    </div>
</form>

<style>
    .application-form {
        display: flex;
        justify-content: space-between;
    }

    .form-column {
        width: 45%;
    }

    label {
        display: block;
        margin-bottom: 5px;
    }
</style>
