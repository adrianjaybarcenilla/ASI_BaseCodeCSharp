<style>
  .joblist{
    overflow: hidden;
    overflow-y: scroll;
    list-style-type: none;
    height: 625px; padding-left: 0px;
  }

  .joblist::-webkit-scrollbar{
    width: 0px;
    background: transparent;
  }

  .joblist-item{
    width: 100%;
    height: 250px;
    border: 1px solid rgb(180, 180, 180);
    background-color: white;
    border-radius: 3px;
    padding: 10px;
    margin-bottom: 10px;
    box-shadow: 5px 5px rgba(53, 53, 53, 0.5);
  }

  .main{
    display: grid;
    gap: 20px;
    grid-auto-flow: column;
    height: 700px;
    margin-top: 40px;
  }

  .background-tint {
    background-color: rgba(53, 53, 53, 0.75);
    background-blend-mode: multiply;
  }

  .content{
    display: grid;
    grid-auto-flow: row;
    gap: 20px;
    width: 1000px;
    height: 100px;
  }

  .menu{
    width: 100%;
    height: 95%;
    border: 1px solid rgb(180, 180, 180);
    background-color: white;
    border-radius: 3px;
    box-shadow: 5px 5px rgba(53, 53, 53, 0.5);
  }

  .menu-section{
    width: 100%;
    height: 25%;
    padding: 10px;
    border-bottom: 1px solid rgb(215, 215, 215);
  }
</style>