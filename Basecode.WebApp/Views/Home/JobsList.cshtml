@{
    ViewData["Title"] = "Jobs List";
}
<h1>@ViewData["Title"]</h1>

<link rel="stylesheet" href="./JobsList.css" />

<div style="display: grid;
            gap: 20px;
            grid-auto-flow: column;
            height: 500px;">
